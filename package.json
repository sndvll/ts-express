{
  "name": "ts-express",
  "version": "0.0.1",
  "description": "Typescript and express app for simple api development.",
  "scripts": {
    "start": "tsc && node ./dist/app.js",
    "dev": "npm run lint && npm run watch",
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "tslint --project .",
    "watch": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec ts-node src/app.ts",
    "ts-node": "ts-node"
  },
  "author": "emil sundvall",
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.9",
    "@types/mongodb": "^3.5.33",
    "@types/shortid": "0.0.29",
    "@types/uuid": "^3.4.9",
    "@types/validator": "^12.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongodb": "^3.6.3",
    "node-json-db": "^1.1.0",
    "reflect-metadata": "^0.1.13",
    "shortid": "^2.2.16",
    "validator": "^13.1.17"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^13.13.30",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.5"
  }
}
