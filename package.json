{
  "name": "ts-express",
  "version": "0.0.1",
  "description": "Typescript and express app for simple api development.",
  "scripts": {
    "start": "tsc && node ./dist/app.js",
    "dev": "npm run lint && npm run watch",
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "tslint --project .",
    "watch": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/app.ts"
  },
  "author": "emil sundvall",
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/mongodb": "^3.5.2",
    "@types/shortid": "0.0.29",
    "@types/uuid": "^3.4.5",
    "@types/validator": "^12.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongodb": "^3.5.5",
    "node-json-db": "^1.0.2",
    "reflect-metadata": "^0.1.13",
    "shortid": "^2.2.15",
    "validator": "^12.0.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.4",
    "jest": "^24.9.0",
    "nodemon": "^2.0.2",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4"
  }
}
