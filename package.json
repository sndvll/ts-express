{
  "name": "ts-express",
  "version": "0.0.1",
  "description": "Typescript and express app for simple api development.",
  "scripts": {
    "start": "tsc && node ./dist/app.js",
    "dev": "npm run lint && npm run watch",
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "watch": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec ts-node src/app.ts",
    "ts-node": "ts-node"
  },
  "author": "emil sundvall",
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/mongodb": "^3.6.10",
    "@types/shortid": "0.0.29",
    "@types/uuid": "^8.3.0",
    "@types/validator": "^13.1.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongodb": "^3.6.5",
    "node-json-db": "^1.3.0",
    "reflect-metadata": "^0.1.13",
    "shortid": "^2.2.16",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
