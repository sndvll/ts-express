{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "./src",
        "removeComments": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "./dist",
        "**/*.spec.ts",
        "node_modules",
        ".vscode",
        ".idea"
    ]
}
